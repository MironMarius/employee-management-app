@model AngajatDetailViewModel
<div class="col-md-12 grid-margin-md-0">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Acasa</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Lista Angajati</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Detalii angajat</li>
                </ol>
            </nav><br /><br />
            <div class="wrap d-flex justify-content-start justify-content-sm-center flex-wrap">
                <img class="rounded-circle shadow-lg" style="width:300px; height:350px" src="@Url.Content(Model.ImgUrl)" alt=""/>
                <div class="wrap align-items-center ml-5">
                    <p class="font-weight-bold text-success" style="font-size:20px">@Model.Nume</p>
                    <p class="font-weight-normal">Functie: @Model.Functie</p>
                    <p class="font-weight-normal">Sex: @Model.Sex</p>
                    <p class="font-weight-normal">Data nasterii: @Model.ZiNastere.ToString("dd/MM/yyyy")</p>
                    <p class="font-weight-normal">ID-ul angajatului: @Model.Id</p>
                    <p class="font-weight-normal">Numarul angajatului: @Model.NrAngajat</p>
                    <p class="font-weight-normal">Email: <a href="#">@Model.Email</a></p>
                    <p class="font-weight-normal">Telefon: <a href="#">@Model.NrTelefon</a></p>
                    <br /><br />

                    <p class="font-weight-bold" style="font-size: 20px"> Plati </p>
                    <hr style="background-color:crimson" />
                    <p class="font-weight-normal">Metoda de plata: @Model.MetodaPlata</p>
                    <p class="font-weight-normal">
                        <i class="fas fa-envelope" style="margin-right:0.6em; color:cornflowerblue"></i> <a href="mailto:@Model.Email?subject=Plata&Body=Detaliile platii sunt atasate in mail">Trimite detaliile platii</a>
                        <br /><br />

                    <p class="font-weight-bold" style="font-size: 20px"> Adresa </p>
                    <hr style="background-color:crimson" />
                    <p class="font-weight-normal">Adresa: @Model.Adresa</p>
                    <p class="font-weight-normal">Oras: @Model.Oras</p>
                    <br />
                    <br />

                </div>
            </div>
        </div>
    </div>
</div>
