@model IEnumerable<Licenta.Models.AngajatIndexViewModel>

@{ ViewBag.Title = "Angajati";}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Acasa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Lista angajati</li>
                            
                    </ol><br/><br/>
                    <div class="row">
                        <div class="col-md-12 table-responsive-md">
                            <a class="btn btn-outline-success float-md-right" asp-action="Create"> Angajat nou</a>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Nr. Angajat</th>
                                        <th>Poza</th>
                                        <th>Nume</th>
                                        <th>Sex</th>
                                        <th>Functie</th>
                                        <th>Oras</th>
                                        <th>Data Angajarii</th>
                                        <th class="text-warning">Actiuni</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model) 
                                    {
                                        <tr>
                                            <td>
                                                <a asp-action="Detail" asp-route-id="@item.Id">
                                                @item.NrAngajat
                                                </a>
                                            </td>
                                            <td>
                                                <img alt="image" src="@Url.Content(item.ImgUrl)"/>
                                            </td>
                                            <td>@item.Nume</td>
                                            <td>@item.Sex</td>
                                            <td>@item.Functie</td>
                                            <td>@item.Oras</td>
                                            <td>@item.ZiAngajare.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id">
                                                    <i class="fas fa-edit"></i>Editare
                                                </a>
                                                <a class="text-success" asp-action="Detail" asp-route-id="@item.Id">
                                                    <i class="fas fa-info-square"></i>Detalii
                                                    
                                                </a>
                                                <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id">
                                                    <i class="fas fa-user-minus"></i>Sterge
                                                </a>
                                            </td>

                                        </tr>
                                      }
            
         
                                </tbody>
                            </table>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</div>