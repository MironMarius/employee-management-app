@model AngajatEditViewModel
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Acasa</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Lista Angajati</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Editare angajat</li>

                </ol>
            </nav><br /><br />
            <form method="post" enctype="multipart/form-data" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="NrAngajat"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="NrAngajat" class="form-control" readonly style="background-color: #293043" />
                        <span asp-validation-for="NrAngajat" class="text-danger"></span>
                    </div>  

                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="ZiAngajare"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="ZiAngajare" class="form-control " readonly style="background-color: #293043" />
                        <span asp-validation-for="ZiAngajare" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="NumeAngajat"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="NumeAngajat" class="form-control "readonly style="background-color: #293043" />
                        <span asp-validation-for="NumeAngajat" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="PrenumeAngajat"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="PrenumeAngajat" class="form-control " readonly style="background-color: #293043"    />
                        <span asp-validation-for="PrenumeAngajat" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="Sex"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select class="form-control" asp-for="Sex">
                            <option>Masculin</option>
                            <option>Feminin</option>
                        </select>
                        <span asp-validation-for="Sex" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="ZiNastere"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="ZiNastere" class="form-control" readonly style="background-color: #293043" />
                        <span asp-validation-for="ZiNastere" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="Email" class="form-control " placeholder="Introduceti Email..." />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="NrTelefon"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="NrTelefon" class="form-control " placeholder="Introduceti numarul de telefon..." />
                        <span asp-validation-for="NrTelefon" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="MetodaPlata"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="MetodaPlata" class="form-control" asp-items="Html.GetEnumSelectList<Licenta.Entitate.MetodaPlata>()"> </select>
                        <span asp-validation-for="MetodaPlata" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="Functie"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="Functie" class="form-control" placeholder="Introduceti functia angajatului..." />
                        <span asp-validation-for="Functie" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-2">
                        <div class="form-group col-md-1">
                            <label asp-for="ImgUrl"></label>
                        </div>
                        <div class="form-group col-md-4">
                            <div class="btn btn-primary btn-icon-text">
                                <i class="fas fa-upload"></i>
                                <input asp-for="ImgUrl" type="file" value="Upload" />
                                <span asp-validation-for="ImgUrl" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Adresa"></label>
                    <input asp-for="Adresa" class="form-control " placeholder="Introduceti adresa..." />
                    <span asp-validation-for="Adresa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Oras"></label>
                    <input asp-for="Oras" class="form-control " placeholder="Introduceti orasul..." />
                    <span asp-validation-for="Oras" class="text-danger"></span>
                </div><br /><br />

                <div class="form-group">
                    <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="far fa-save" style="margin-right:0.7em"></i>Editati</button>
                    <a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-backward" style="margin-right:0.7em"></i>Inapoi</a>
                    <br />
                    <br />
                    <br />
                </div>

            </form>
        </div>
    </div>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
